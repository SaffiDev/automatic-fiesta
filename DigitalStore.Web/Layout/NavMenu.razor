@using DigitalStore.Web.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Digital Store</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door" aria-hidden="true"></span> Главная
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="catalog">
                <span class="bi bi-list-ul" aria-hidden="true"></span> Каталог
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cart">
                <span class="bi bi-cart" aria-hidden="true"></span> Корзина
            </NavLink>
        </div>

        @if (AuthService.IsAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Profile">
                    <span class="bi bi-person-circle" aria-hidden="true"></span> Личный кабинет
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="my-orders">
                    <span class="bi bi-bag" aria-hidden="true"></span> Мои заказы
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="wishlist">
                    <span class="bi bi-heart" aria-hidden="true"></span> Избранное
                </NavLink>
            </div>

            @if (AuthService.CurrentUserRole == "admin")
            {
                <div class="nav-item px-3 mt-4">
                    <strong class="text-light px-3">Админка</strong>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/products">
                        <span class="bi bi-box-seam me-2"></span> Продукты
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/orders">
                        <span class="bi bi-receipt me-2"></span> Заказы
                    </NavLink>
                </div>
            }
        }

        <div class="nav-item px-3 mt-auto">
            @if (AuthService.IsAuthenticated)
            {
                <div class="d-flex flex-column">
                    <span class="nav-link text-light px-3">
                        <span class="bi bi-person" aria-hidden="true"></span> @AuthService.CurrentUser?.Email
                    </span>
                    <button class="nav-link btn btn-link text-light px-3 text-start" @onclick="SignOut">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Выйти
                    </button>
                </div>
            }
            else
            {
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Войти
                </NavLink>
            }
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task SignOut()
    {
        await AuthService.SignOutAsync();
        Navigation.NavigateTo("");
    }
}