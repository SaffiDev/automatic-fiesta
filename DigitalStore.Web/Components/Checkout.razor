@using DigitalStore.Web.Services
@inject CartService CartService
@inject OrderService OrderService

@if (_isVisible)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-cart-check me-2"></i>
                        @( _pendingOrderId.HasValue ? $"Оплата заказа №{_pendingOrderId}" : "Оформление заказа" )
                    </h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>

                @if (_orderCreated)
                {
                    <div class="modal-body text-center py-5">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                        <h3 class="mt-4 mb-3 text-success">
                            Заказ №@_orderId @( _pendingOrderId.HasValue ? "оплачен!" : "создан и оплачен!" )
                        </h3>
                        <p class="lead mb-4">Все цифровые товары доступны для скачивания в личном кабинете.</p>
                        <div class="d-grid gap-3">
                            <a href="/my-orders" class="btn btn-success btn-lg">
                                <i class="bi bi-download me-2"></i>Перейти к заказам
                            </a>
                            <a href="/catalog" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-shop me-2"></i>Вернуться в каталог
                            </a>
                        </div>
                        <small class="text-muted mt-4 d-block">Заказ отправлен на вашу почту</small>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button class="btn btn-link" @onclick="Close">Закрыть</button>
                    </div>
                }
                else
                {
                    <div class="modal-body">
                        @if (_totalItems == 0 && !_pendingOrderId.HasValue)
                        {
                            <div class="text-center text-muted py-5">
                                <i class="bi bi-cart-x" style="font-size: 3rem;"></i>
                                <p class="mt-3">Корзина пуста</p>
                            </div>
                        }
                        else if (_isProcessing)
                        {
                            <div class="text-center py-5">
                                <div class="spinner-border text-primary mb-3" role="status">
                                    <span class="visually-hidden">Обработка...</span>
                                </div>
                                <p>Обрабатываем ваш платеж...</p>
                            </div>
                        }
                        else
                        {
                            <!-- Заголовок и список товаров только для нового заказа -->
                            @if (_pendingOrderId.HasValue)
                            {
                                <div class="alert alert-light border mb-4">
                                    <strong>Оплата заказа №@_pendingOrderId</strong><br />
                                    <span class="text-success fs-5">@_totalPrice.ToString("N0") ₽</span>
                                </div>
                            }
                            else
                            {
                                <h6 class="mb-3 text-muted">Товары в заказе:</h6>
                                <div class="list-group mb-4">
                                    @foreach (var item in _cartItems!)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">@item.ProductName</h6>
                                                    <small class="text-muted">
                                                        <i class="bi bi-box me-1"></i>Количество: @item.Quantity
                                                    </small>
                                                </div>
                                                <strong class="text-success">@((item.Price * item.Quantity).ToString("N0")) ₽</strong>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }

                            <!-- Эти блоки показываются ВСЕГДА (и для нового, и для старого заказа) -->
                            <h6 class="mb-3">Способ оплаты</h6>
                            <div class="border rounded p-3 mb-4 bg-light">
                                <div class="d-flex align-items-center">
                                    <div class="me-4">
                                        <i class="bi bi-credit-card-2-back fs-2 text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <strong>Visa •••• 4242</strong><br>
                                        <small class="text-muted">Срок действия: 12/28 · По умолчанию</small>
                                    </div>
                                    <div>
                                        <span class="badge bg-primary">Выбрано</span>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-info small mb-4">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Демо-режим:</strong> Нажмите "Оплатить заказ" — платёж будет симулирован успешно. Деньги не списываются.
                            </div>

                            <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                                <h5 class="mb-0">К оплате:</h5>
                                <h3 class="mb-0 text-success">@_totalPrice.ToString("N0") ₽</h3>
                            </div>

                            @if (_errorMessage != null)
                            {
                                <div class="alert alert-danger mt-3">
                                    <i class="bi bi-exclamation-triangle me-2"></i>@_errorMessage
                                </div>
                            }
                        }
                    </div>

                    <div class="modal-footer d-flex justify-content-between">
                        <button class="btn btn-secondary" @onclick="Close" disabled="@_isProcessing">
                            <i class="bi bi-x me-2"></i>Отмена
                        </button>
                        <button class="btn btn-success btn-lg px-5" @onclick="ConfirmPayment" 
                                disabled="@(_isProcessing || (_totalItems == 0 && !_pendingOrderId.HasValue))">
                            @if (_isProcessing)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                <text>Обработка...</text>
                            }
                            else
                            {
                                <i class="bi bi-lock me-2"></i>
                                <text>Оплатить заказ</text>
                            }
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnClose { get; set; }

    private bool _isVisible = false;
    private int _totalItems = 0;
    private decimal _totalPrice = 0;
    private List<CartService.CartItemWithProduct>? _cartItems;

    private bool _isProcessing = false;
    private bool _orderCreated = false;
    private int? _orderId;
    private string? _errorMessage;

    private int? _pendingOrderId;

    public async Task Show()
    {
        _isVisible = true;
        _orderCreated = false;
        _orderId = null;
        _pendingOrderId = null;
        _errorMessage = null;

        _totalItems = await CartService.GetTotalCountAsync();
        _totalPrice = await CartService.GetTotalPriceAsync();
        _cartItems = await CartService.GetCartItemsWithProductsAsync();

        StateHasChanged();
    }

    public async Task ShowForPendingOrder(int orderId, decimal amount)
    {
        _isVisible = true;
        _orderCreated = false;
        _orderId = orderId;
        _pendingOrderId = orderId;
        _errorMessage = null;

        _totalItems = 1;
        _totalPrice = amount;
        _cartItems = null;

        StateHasChanged();
    }

    private async Task Close()
    {
        _isVisible = false;
        await OnClose.InvokeAsync();
    }

    private async Task ConfirmPayment()
    {
        _isProcessing = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            if (_pendingOrderId.HasValue)
            {
                bool success = await OrderService.MarkOrderAsPaidAsync(_pendingOrderId.Value);
                if (success)
                {
                    _orderCreated = true;
                    await Task.Delay(1500);
                }
                else
                {
                    _errorMessage = "Не удалось обработать платеж.";
                }
            }
            else
            {
                _orderId = await OrderService.CreateOrderFromCartAsync();
                if (_orderId.HasValue)
                {
                    _orderCreated = true;
                    await Task.Delay(1500);
                }
                else
                {
                    _errorMessage = "Не удалось создать заказ.";
                }
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Ошибка: {ex.Message}";
        }
        finally
        {
            _isProcessing = false;
            StateHasChanged();
        }
    }
}