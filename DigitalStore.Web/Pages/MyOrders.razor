@page "/my-orders"
@using DigitalStore.Application.DTOs
@using DigitalStore.Web.Services
@using DigitalStore.Web.Components
@using static Supabase.Postgrest.Constants
@inject AuthService AuthService
@inject SupabaseService SupabaseService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Мои заказы — Digital Store</PageTitle>

<!-- Компонент Checkout (модалка оплаты) -->
<Checkout @ref="_checkout" OnClose="OnCheckoutClosed" />

<div class="container my-5">
    <h1 class="mb-4">Мои заказы</h1>

    @if (!AuthService.IsAuthenticated)
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-box-arrow-in-right" style="font-size: 4rem;"></i>
            <h4 class="mt-4">Войдите в аккаунт</h4>
            <p>Чтобы увидеть свои заказы, нужно авторизоваться</p>
            <a href="/login" class="btn btn-primary btn-lg">Войти или зарегистрироваться</a>
        </div>
    }
    else if (_loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="mt-3">Загружаем ваши заказы...</p>
        </div>
    }
    else if (_orders.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-bag" style="font-size: 4rem; opacity: 0.3;"></i>
            <h4 class="mt-4">Пока нет заказов</h4>
            <p>Но это легко исправить!</p>
            <a href="/catalog" class="btn btn-success btn-lg">Перейти в каталог</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in _orders)
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <strong class="fs-5">Заказ №@order.Id</strong>
                                <span class="ms-3 text-muted">@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                            <span class="badge @(order.Status == "paid" ? "bg-success" : "bg-warning") fs-6">
                                @(order.Status == "paid" ? "Оплачено" : "Ожидает оплаты")
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <p class="mb-2"><strong>Сумма:</strong> <span class="text-success fs-5">@order.FinalAmount.ToString("N0") ₽</span></p>
                                    <p class="mb-0"><strong>Номер заказа:</strong> @order.OrderNumber</p>
                                    @if (order.PaidAt.HasValue)
                                    {
                                        <p class="mb-0"><strong>Оплачено:</strong> @order.PaidAt.Value.ToString("dd.MM.yyyy HH:mm")</p>
                                    }
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <button class="btn btn-outline-primary me-2" @onclick="() => OpenOrderDetails(order)">
                                        Подробности
                                    </button>

                                    @if (order.Status != "paid")
                                    {
                                        <button class="btn btn-success" @onclick="() => PayOrder(order)">
                                            <i class="bi bi-credit-card me-2"></i>Оплатить
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- МОДАЛКА С ПОДРОБНОСТЯМИ ЗАКАЗА -->
@if (_selectedOrder != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-receipt me-2"></i>Заказ №@_selectedOrder.Id
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseOrderDetails"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Дата:</strong> @_selectedOrder.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                    <p><strong>Статус:</strong>
                        <span class="badge @(_selectedOrder.Status == "paid" ? "bg-success" : "bg-warning")">
                            @(_selectedOrder.Status == "paid" ? "Оплачено" : "Ожидает оплаты")
                        </span>
                    </p>
                    @if (_selectedOrder.PaidAt.HasValue)
                    {
                        <p><strong>Оплачено:</strong> @_selectedOrder.PaidAt.Value.ToString("dd.MM.yyyy HH:mm")</p>
                    }
                    <p><strong>Сумма:</strong> <span class="text-success h5">@_selectedOrder.FinalAmount.ToString("N0") ₽</span></p>

                    <h6 class="mt-4 mb-3">Товары в заказе:</h6>
                    @if (_orderItemsLoading)
                    {
                        <p>Загрузка товаров...</p>
                    }
                    else if (_orderItems.Count == 0)
                    {
                        <p class="text-muted">Товары не найдены</p>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var item in _orderItems)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@item.ProductName</strong> × @item.Quantity<br />
                                        <small class="text-muted">@item.UnitPrice.ToString("N0") ₽ за штуку</small>
                                    </div>
                                    <div class="text-end">
                                        <strong class="text-success">@item.TotalPrice.ToString("N0") ₽</strong><br />
                                        @if (_selectedOrder.Status == "paid" && item.DownloadsRemaining > 0 && item.DownloadExpiresAt > DateTime.UtcNow)
                                        {
                                            <button class="btn btn-sm btn-primary mt-2" @onclick="() => DownloadItem(item)">
                                                <i class="bi bi-download me-1"></i>Скачать (@item.DownloadsRemaining)
                                            </button>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Скачивание недоступно</small>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseOrderDetails">Закрыть</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<OrderDto> _orders = new();
    private bool _loading = true;

    private OrderDto? _selectedOrder;
    private List<OrderItemDto> _orderItems = new();
    private bool _orderItemsLoading = false;

    private Checkout _checkout = default!;

    protected override async Task OnInitializedAsync()
    {
        AuthService.OnAuthStateChanged += StateHasChanged;

        if (AuthService.IsAuthenticated)
        {
            var authUserId = AuthService.GetUserId();
            if (!string.IsNullOrEmpty(authUserId))
            {
                _orders = await SupabaseService.GetOrdersByUserAsync(authUserId) ?? new();
            }
        }

        _loading = false;
    }

    private async Task OpenOrderDetails(OrderDto order)
    {
        _selectedOrder = order;
        _orderItemsLoading = true;
        _orderItems = new();
        StateHasChanged();

        _orderItems = await SupabaseService.GetOrderItemsAsync(order.Id.Value);
        _orderItemsLoading = false;
    }

    private async Task DownloadItem(OrderItemDto item)
    {
        var baseUrl = await SupabaseService.GetDownloadUrlAsync(item.DownloadToken);

        if (string.IsNullOrEmpty(baseUrl))
        {
            return;
        }

        // Принудительно заставляем скачать файл (работает для всех типов)
        var downloadUrl = baseUrl + (baseUrl.Contains("?") ? "&" : "?") + "download=";

        // Уменьшаем счётчик локально — UI сразу обновится
        item.DownloadsRemaining--;
        StateHasChanged();

        // Скачиваем через JS
        await JS.InvokeVoidAsync("eval", $@"
        const a = document.createElement('a');
        a.href = '{downloadUrl}';
        // a.download оставляем пустым — Supabase сам подставит оригинальное имя файла
        a.download = '';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
    ");
    }
    private void CloseOrderDetails()
    {
        _selectedOrder = null;
        _orderItems = new();
    }

    private async Task PayOrder(OrderDto order)
    {
        await _checkout.ShowForPendingOrder(order.Id.Value, order.FinalAmount);
    }

    private async Task OnCheckoutClosed()
    {
        // Обновляем список заказов после успешной оплаты
        if (AuthService.IsAuthenticated)
        {
            var authUserId = AuthService.GetUserId();
            if (!string.IsNullOrEmpty(authUserId))
            {
                _orders = await SupabaseService.GetOrdersByUserAsync(authUserId) ?? new();
                StateHasChanged();
            }
        }
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= StateHasChanged;
    }
}